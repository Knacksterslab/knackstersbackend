{
  "name": "knacksters-backend",
  "version": "1.0.0",
  "description": "Backend API server for Knacksters",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --clear --transpile-only src/server.ts",
    "build": "tsc && npx prisma generate",
    "start": "node dist/server.js",
    "deploy": "npx prisma migrate deploy && npm run start",
    "lint": "eslint src --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "create-admin": "ts-node scripts/create-admin.ts",
    "auth:sync": "ts-node scripts/sync-supertokens-users.ts",
    "db:reset": "prisma migrate reset",
    "db:push": "prisma db push",
    "db:test": "ts-node src/utils/test-db-connection.ts"
  },
  "keywords": [
    "api",
    "express",
    "supertokens"
  ],
  "author": "Knacksters",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "googleapis": "^170.0.0",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "prisma": "5.22.0",
    "stripe": "^20.1.2",
    "supertokens-node": "^20.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
